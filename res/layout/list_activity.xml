<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_date"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="1" />

        <TextView
            android:id="@+id/activity_time"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="2" />

        <TextView
            android:id="@+id/activity_week"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="3" />
    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#D4D4D4" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="4.5"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/activity_event"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textColor="#0F8FCF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/activity_place"
                style="@style/textview_background"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/activity_state"
                style="@style/textview_background"
                android:layout_alignParentRight="true"
                android:background="@drawable/activity_state_doing_back" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>