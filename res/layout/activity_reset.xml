<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/log_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ForgetPwd" >

    <TextView
        android:id="@+id/tv_forget_pwd"
        style="@style/textview_title"
        android:layout_marginTop="10dp"
        android:text="请输入验证码及新密码"
        android:textColor="#fff" />

    <LinearLayout
        android:id="@+id/code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forget_pwd"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/textview_style"
            android:text="验证码：" />

        <EditText
            android:id="@+id/reset_input_vertification"
            style="@style/edittext_style_white"
            android:hint="请输入短信验证码"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@id/code"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/textview_style"
            android:text="新密码：" />

        <EditText
            android:id="@+id/reset_input_pwd"
            style="@style/edittext_style_white"
            android:hint="请输入新密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwd2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@id/pwd1"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp" >

        <TextView
            style="@style/textview_style"
            android:layout_weight="1"
            android:text="新密码确认：" />

        <EditText
            android:id="@+id/reset_input_pwd1"
            style="@style/edittext_style_white"
            android:layout_weight="1.5"
            android:hint="再次输入新密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pwd2"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/log_button"
        android:onClick="onClick_resetPwd"
        android:text="确定重置" />

</RelativeLayout>